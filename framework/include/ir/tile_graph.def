/*!
 * \file tile_graph.def
 * \brief
 */

DEFOP(
    UnaryOp,
    INHERIT(ElementWiseUnaryTileBaseOp),
    OPCODE(
        OP_EXP,
        OP_NEG,
        OP_RSQRT,
        OP_SQRT,
        OP_LOGICALNOT,
        OP_RECIPROCAL,
        OP_ABS,
        OP_LN
    ),
    INPUT(Tile, Input),
    OUTPUT(Tile, Output),
    ATTR(int, CombineAxis, -1)
)

DEFOP(
    BinaryOp,
    INHERIT(ElementWiseBinaryTileBaseOp),
    OPCODE(
        OP_ADD,
        OP_SUB,
        OP_MUL,
        OP_DIV,
        OP_MIN,
        OP_MAX
    ),
    INPUT(Tile, Lhs),
    INPUT(Tile, Rhs),
    OUTPUT(Tile, Output),
    ATTR(int, CombineAxis, -1)
)

DEFOP(
    BinaryScalarMixOp,
    INHERIT(ElementWiseScalarMixBinaryTileBaseOp),
    OPCODE(
        OP_ADDS,
        OP_SUBS,
        OP_MULS,
        OP_DIVS,
        OP_MINS,
        OP_MAXS
    ),
    INPUT(Tile, Lhs),
    INPUT(Scalar, Rhs),
    OUTPUT(Tile, Output),
    ATTR(int, CombineAxis, -1),
    ATTR(bool, Reverse, false)
)