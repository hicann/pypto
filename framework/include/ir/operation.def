/*!
 * \file operation.def
 * \brief
 */

DEFOP(
    UnaryScalarOp,
    INHERIT(UnaryScalarBaseOp),
    OPCODE(
        OP_SCALAR_NOT,
        OP_SCALAR_NEG,
        OP_SCALAR_POS
    ),
)

DEFOP(
    BinaryScalarOp,
    INHERIT(BinaryScalarBaseOp),
    OPCODE(
        OP_SCALAR_ADD,
        OP_SCALAR_SUB,
        OP_SCALAR_MUL,
        OP_SCALAR_DIV,
        OP_SCALAR_MOD,
        OP_SCALAR_BITAND,
        OP_SCALAR_BITOR,
        OP_SCALAR_BITXOR,
        OP_SCALAR_EQ,
        OP_SCALAR_NE,
        OP_SCALAR_LT,
        OP_SCALAR_LE,
        OP_SCALAR_GT,
        OP_SCALAR_GE,
        OP_SCALAR_AND,
        OP_SCALAR_OR,
        OP_SCALAR_MIN,
        OP_SCALAR_MAX
    ),
)

DEFOP(
    CondScalarOp,
    INHERIT(CondScalarBaseOp),
    OPCODE(
        OP_SCALAR_ITE
    ),
)