        OP_SCALAR_MUL,
        OP_SCALAR_DIV,
        OP_SCALAR_MOD,
        OP_SCALAR_BITAND,
        OP_SCALAR_BITOR,
        OP_SCALAR_BITXOR,
        OP_SCALAR_EQ,
        OP_SCALAR_NE,
        OP_SCALAR_LT,
